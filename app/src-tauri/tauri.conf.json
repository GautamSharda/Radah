{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Radah",
  "version": "0.1.0",
  "identifier": "radah.ai",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Radah",
        "width": 1024,
        "height": 768,
        "visible": false
      },
      {
        "width": 250,
        "height": 250,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' ws://localhost:3030; frame-src http://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "Dockerfile",
      "novnc_startup.sh",
      "startup.sh",
      "supervisord.conf",
      "image/**/*"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Gautam Sharda (44HG236YTQ)",
      "providerShortName": "44HG236YTQ"
    }
  }
}
